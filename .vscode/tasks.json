{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "Build SAMD",
            "type": "shell",
            "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\pio.exe",
            "args": [
                "run",
                "-e",
                "build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload JLINK SAMD",
            "type": "shell",
            "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\pio.exe",
            "args": [
                "run",
                "-e",
                "uploadJLINK",
                "--target",
                "upload"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload USB SAMD",
            "type": "shell",
            "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\pio.exe",
            "args": [
                "run",
                "-e",
                "uploadUSB",
                "--target",
                "upload"
            ],
            "group": "build",
            "problemMatcher": []
        },
		{
            "label": "OpenKNXproducer",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command": "${env:USERPROFILE}\\bin\\OpenKNXproducer.exe",
            "args": [
                "create",
                "--Debug",
                "EnoceanGateway"
            ],
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Buid-Release",
            "type": "shell",
            "command": "scripts/Build-Release.ps1 ",
            "args": [],
            "problemMatcher": [],
            "group": "test"
        }
	]
}